<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFBB86FC" /> <!-- Purple color -->
            <size
                android:width="300dp"
                android:height="300dp"/>
        </shape>
    </item>

    <!-- Sample text -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
            <size
                android:width="250dp"
                android:height="250dp"/>
            <padding android:top="20dp"/>
        </shape>
    </item>

    <item android:top="100dp" android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
            <size
                android:width="200dp"
                android:height="50dp"/>
        </shape>
    </item>

    <item android:top="120dp" android:gravity="center">
        <text
            android:text="Sample AI Image"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"/>
    </item>
</layer-list>